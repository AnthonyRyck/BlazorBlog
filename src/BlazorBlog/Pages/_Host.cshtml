@page "/"
@namespace BlazorBlog.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
}
@inject SettingsSvc Svc

<head>
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap" rel="stylesheet" />
    <link href="_content/MudBlazor/MudBlazor.min.css" rel="stylesheet" />
    <link href="_content/MudBlazor.Markdown/MudBlazor.Markdown.min.css" rel="stylesheet" />

    <link href="_content/Microsoft.AspNetCore.Components.Web.Extensions/headManager.js" />

    <meta name="og:image" content="@Svc.BlogName" />
    <meta name="og:description" content="@Svc.BlogDescription" />
    <meta name="og:image" content="@Svc.BlogImage" />
</head>

<component type="typeof(App)" render-mode="ServerPrerendered" />
